<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <LinearLayout
        android:id="@+id/lineAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <Button
            android:layout_width="89dp"
            android:layout_height="27dp"
            android:background="@drawable/bo_goc_continuous"
            android:layout_marginLeft="10dp"
            android:text="Continuous"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:layout_marginRight="5dp"
            />
        <ListView
            android:id="@+id/listview_times"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:orientation="horizontal"
            />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rela1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lineAll"
        >
        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="20dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/microphone"
                android:layout_below="@id/listview_times"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="243 artists"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See all"
                android:textColor="#F2BACE"
                android:layout_marginLeft="230dp"
                android:layout_below="@id/listview_times"
                />
        </LinearLayout>

        <ListView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/line1"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rela1"

        >
        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="20dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/compact_disc"
                android:layout_below="@id/listview_times"
                />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="243 artists"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See all"
                android:textColor="#F2BACE"
                android:layout_marginLeft="230dp"
                android:layout_below="@id/listview_times"
                />
        </LinearLayout>

        <ListView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/line2"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rela2"
        >
        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="20dp"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/music_note"
                android:layout_below="@id/listview_times"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="243 artists"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See all"
                android:textColor="#F2BACE"
                android:layout_marginLeft="230dp"
                android:layout_below="@id/listview_times"
                />
        </LinearLayout>

        <ListView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/line3"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            />
    </RelativeLayout>







</RelativeLayout>