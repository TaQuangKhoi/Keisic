<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chart.ChartFragment">

    <LinearLayout
        android:id="@+id/lineAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="89dp"
            android:layout_height="27dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bo_goc_continuous"
            android:text="Continuous"
            android:textAllCaps="false"
            android:textColor="@color/black" />

        <ListView
            android:id="@+id/listview_times"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:orientation="horizontal" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rela1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lineAll">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/listview_times"
                android:src="@drawable/microphone"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="243 artists" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/listview_times"
                android:layout_marginLeft="230dp"
                android:text="See all"
                android:textColor="#F2BACE" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_artists"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/line1"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rela1"

        >

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/listview_times"
                android:src="@drawable/compact_disc" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="243 artists" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/listview_times"
                android:layout_marginLeft="230dp"
                android:text="See all"
                android:textColor="#F2BACE" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_albums"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/line2"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rela2">

        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/listview_times"
                android:src="@drawable/music_note" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="243 artists" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/listview_times"
                android:layout_marginLeft="230dp"
                android:text="See all"
                android:textColor="#F2BACE" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_songs"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/line3"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" />
    </RelativeLayout>


</RelativeLayout>